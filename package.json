{
  "name": "Fukugyou",
  "version": "1.0.0",
  "description": "My fabulous Nuxt.js project",
  "author": "hikarut",
  "private": true,
  "scripts": {
    "dev": "PORT=3333 cross-env NODE_ENV='dev' nuxt",
    "prod": "PORT=3333 cross-env NODE_ENV='prod' nuxt",
    "build": "cross-env NODE_ENV='dev' nuxt build",
    "build:prod": "cross-env NODE_ENV='prod' nuxt build",
    "start": "cross-env NODE_ENV='dev' nuxt start",
    "start:prod": "cross-env NODE_ENV='prod' nuxt start",
    "generate": "cross-env NODE_ENV='dev' nuxt generate",
    "generate:prod": "cross-env NODE_ENV='prod' nuxt generate",
    "test": "jest"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.8.1",
    "@nuxtjs/google-adsense": "^1.1.3",
    "@nuxtjs/sitemap": "^1.1.0",
    "contentful": "^7.5.0",
    "cross-env": "^5.2.0",
    "firebase": "^6.2.4",
    "fs": "0.0.1-security",
    "json5": "^2.1.0",
    "nuxt": "^2.4.0",
    "vue-markdown": "^2.2.4",
    "vuetify": "^1.5.5",
    "vuetify-loader": "^1.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^8.2.1",
    "babel-jest": "^24.1.0",
    "eslint": "^5.0.1",
    "eslint-config-prettier": "^3.1.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-prettier": "2.6.2",
    "eslint-plugin-vue": "^4.0.0",
    "jest": "^24.1.0",
    "json5-loader": "^2.0.0",
    "nodemon": "^1.18.9",
    "prettier": "1.14.3",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.3",
    "vue-lazyload": "^1.2.6"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      ".*\\.(vue)$": "vue-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^@@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/$1",
      "^~~/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/*.{js,vue}",
      "!**/node_modules/**"
    ]
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          "@babel/preset-env"
        ]
      }
    }
  }
}
